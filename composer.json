{
    "name": "ssnukala/sprinkle-oauth",
    "type": "userfrosting-sprinkle",
    "description": "OAuth authentication sprinkle for UserFrosting 6, supporting Google, Meta (Facebook, Instagram), Outlook, and LinkedIn",
    "keywords": ["userfrosting", "sprinkle", "oauth", "authentication", "google", "facebook", "linkedin", "microsoft"],
    "license": "MIT",
    "authors": [
        {
            "name": "Srinivas Nukala"
        }
    ],
    "require": {
        "userfrosting/sprinkle-core": "^6.0",
        "php": "^8.1",
        "google/apiclient": "^2.15",
        "league/oauth2-facebook": "^2.2",
        "microsoft/microsoft-graph": "^2.0",
        "guzzlehttp/guzzle": "^7.8"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-mockery": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpstan/phpstan-strict-rules": "^1.0",
        "phpunit/phpunit": "^10.5",
        "mockery/mockery": "^1.2",
        "fakerphp/faker": "^1.17",
        "slam/phpstan-extensions": "^6.0",
        "php-mock/php-mock-mockery": "^1.3"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "tbachert/spi": true
        }
    },    
    "autoload": {
        "psr-4": {
            "UserFrosting\\Sprinkle\\OAuth\\": "app/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UserFrosting\\Sprinkle\\OAuth\\Tests\\": "app/tests/"
        }
    },
    "minimum-stability": "alpha",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    }
}
